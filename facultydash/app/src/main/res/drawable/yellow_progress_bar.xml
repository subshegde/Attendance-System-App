<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Track -->
    <item android:id="@android:id/background">
        <shape
            android:shape="rectangle">
            <solid android:color="#C0C0C0" /> <!-- Background color of the progress bar track -->
            <corners android:radius="2dp" /> <!-- Rounded corners for the track -->
        </shape>
    </item>

    <!-- Progress -->
    <item android:id="@android:id/progress">
        <clip>
            <shape
                android:shape="rectangle">
                <solid android:color="@color/yellow" /> <!-- Color of the progress -->
                <corners android:radius="2dp" /> <!-- Rounded corners for the progress -->
            </shape>
        </clip>
    </item>
</layer-list>
